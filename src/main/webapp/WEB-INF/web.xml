<web-app xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
	      http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	version="2.5">

	<display-name>AdoptNext Web Application</display-name>

	<servlet-mapping>
		<servlet-name>adoptnext</servlet-name>
		<url-pattern>/adoptnext</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>adoptnext</servlet-name>
		<servlet-class>com.mphasis.servlet.AdoptNext</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>

</web-app>